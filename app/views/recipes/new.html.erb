<div class="form-container">
  <h1>New Recipe</h1>

  <%= form_for @recipe do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :preparation_time %>
      <%= f.number_field :preparation_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :cooking_time %>
      <%= f.number_field :cooking_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

     <div class="mb-3 form-check">
      <%= f.label :public, class: "form-check-label" %>      
      <%= f.check_box :public, class: "form-check-input" %>
    </div>

    <%= f.submit 'Create Recipe', class: 'btn btnn-primary' %>
  <% end %>
  <div>
  <%= link_to "Back to recipes", recipes_path %>
</div>
</div>