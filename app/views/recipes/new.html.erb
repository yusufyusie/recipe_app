<div class="container">
  <h1>New Recipe</h1>

  <%= form_for @recipe do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :preparation_time %>
      <%= f.number_field :preparation_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :cooking_time %>
      <%= f.number_field :cooking_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :public %>
      <%= f.select :public, [['Yes', true], ['No', false]], {}, class: 'form-control' %>
    </div>

    <%= f.submit 'Create Recipe', class: 'btn btn-primary' %>
  <% end %>
</div>