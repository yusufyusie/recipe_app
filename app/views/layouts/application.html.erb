<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags 'application' %>
  </head>

  <body>
   <% unless controller_name == 'sessions' || controller_name == 'registrations' %>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
              <a class="nav-link" href="<%= home_path %>">Home</a>
              </li>
              
              <li class="nav-item">
                <a class="nav-link" href="<%= user_foods_path(current_user) %>">Foods</a>
              </li>
              
              <li class="nav-item">
                <a class="nav-link" href="<%= user_recipes_path(current_user) %>">Recipes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= public_recipes_path %>">Public recipe</a>
              </li>
              <li class="nav-item">
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>
    <% end %>

    <%= yield %>
</body>
</html>
