<h1>Welcome to Ometman-Yusef Recipe App</h1>
<nav class="auth-links">
  <% if user_signed_in? %>
    <div class="container">
  <p>Discover new recipes, share your own, and connect with other food lovers.</p>

  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="card">
          <%= image_tag recipe.image, class: 'card-img-top' if recipe.image.present? %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to recipe.title, recipe_path(recipe) %></h5>
            <p class="card-text"><%= truncate(recipe.description, length: 100) %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'View Recipe', recipe_path(recipe), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-sm btn-outline-secondary' if current_user == recipe.user %>
              </div>
              <small class="text-muted"><%= time_ago_in_words(recipe.created_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <% else %>
  <p>Login or Register here to use</p>
    <%= link_to 'Sign in', new_user_session_path, class: 'auth-link' %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'auth-link' %>
  <% end %>
</nav>