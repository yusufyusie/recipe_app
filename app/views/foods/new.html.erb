<% if can?(:create, Food) %>
<h1>Create a New Food</h1>

<%= form_with(model: [@user, @food], url: user_foods_path(@user), local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.submit "Create Food" %>
  </div>
<% end %>
<% end %>

<%= link_to "Back to Food List", user_foods_path(@user) %>
