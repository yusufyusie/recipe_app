<h1 class="text-center">Create New Food</h1>

<%= form_with(model: [@user, @food], url: user_foods_path(@user), local: true, html: { class: 'food-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Food", class: 'btn btn-success' %>
  </div>
<% end %>